<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/items_inbetween_space_large"
    android:paddingBottom="@dimen/items_inbetween_space_large"
    android:background="#eeFF7372"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_connection"
            android:src="@drawable/ic_error"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/tv_connection"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:text="No external storage available"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>





</RelativeLayout>